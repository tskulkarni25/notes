<h3>Edit Note:</h3>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="<%= notes_path %>">Home</a></li>
    <li class="breadcrumb-item"><%= link_to @note.id, note_path(@note) %></li>
    <li class="breadcrumb-item active" aria-current="page">Edit</li>
  </ol>
</nav>
<%= form_for @note, url: note_path(@note), method: :put do |f| %>
  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title, autofocus: true, class: "col-12" %>
  </div>
  <div class="field">
    <%= f.label :body %><br/>
    <%= f.text_area :body, autofocus: true, class: "col-12" %>
  </div>
  <div class="field">
    <%= f.label :tag_list %><br/>
    <%= f.text_field :tag_list, autofocus: true, class: "col-12" %>
  </div>

  <div class="actions mt-20">
    <%= link_to "Cancel", notes_path, class: "btn btn-warning" %>
    <%= f.submit "Update", class: "btn btn-success" %>
  </div>
<% end %>