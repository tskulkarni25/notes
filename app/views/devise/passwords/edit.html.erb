<div class="card">
  <article class="card-body">
    <a href="<%= new_session_path(resource_name) %>" class="float-right btn btn-outline-primary">Log In</a>
    <a href="<%= new_user_registration_path %>" class="float-right btn btn-outline-primary">Sign up</a>
    <h4 class="card-title mb-4 mt-1">Change your password</h4>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <label>New password</label>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="form-group">
        <label>Confirm new password</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block"> Change my password </button>
      </div>                                                         
    <% end %>
  </article>
</div>
