<div class="card">
  <article class="card-body">
    <a href="<%= new_session_path(resource_name) %>" class="float-right btn btn-outline-primary">Log In</a>
    <a href="<%= new_user_registration_path %>" class="float-right btn btn-outline-primary">Sign up</a>
    <h4 class="card-title mb-4 mt-1">Forgot your password?</h4>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <label>Your email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block"> Send me reset password instructions </button>
      </div>                                                         
    <% end %>
  </article>
</div>
